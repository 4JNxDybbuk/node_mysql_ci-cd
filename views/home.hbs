
<a class="btn btn-success mt-2 mb-2" href="/api/adduser"> <i class="bi bi-person-circle"></i> Add User</a>

<table class="table" border="1">
    <thead class="table-info">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each rows}}
        <tr>
            <th scope="row">{{this.userID}}</th>
            <td> {{this.first_name}} </td>
            <td> {{this.last_name}} </td>
            <td> {{this.email}} </td>
            <td> {{this.phone}} </td>
            <td class="text-center">
                <a href="/api/viewuser/{{this.userID}}" type="button" class="btn btn-primary btn-sm mx-2"><i class="bi bi-eye"></i> View</a>
                <a href="/api/edituser/{{this.userID}}" type="button" class="btn btn-info btn-sm mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                <a href="/api/deleteuser/{{this.userID}}" type="button" class="btn btn-danger btn-sm mx-2"><i class="bi bi-trash2-fill"></i> Delete</a>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>